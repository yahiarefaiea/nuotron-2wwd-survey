baseline= 28px
translate= baseline/2

//  COLORS
magenta= #c657a0
magenta-alt= #863b6c

nuc1= rgba(248, 0, 255, .5)
nuc2= rgba(241, 90, 34, .5)
nuc3= rgba(0, 174, 239, .5)
nuc4= rgba(234, 234, 0, .5)

background= white
border-default= #eee
border-dark= #ddd

text-dark-alt= #464646
text-dark= #545454
text-default= #727272
text-light= #929292
text-light-alt= #aaa

selection-bg= magenta
selection-color= white

//  OUTLINE
outline= 1px dashed
outline-color= text-dark-alt
hasOutline(clr= outline-color)
  &, &:hover
    outline: outline transparent
  &:not(:hover):focus
    outline: outline clr

//  FOCUS EFFECT
focusEffect(clr= rgba(255, 255, 255, .5))
  &:after
    content: ''
    z-index: 1
    display: block
    makeAbsolute: 0 50% 0 50%
    background-color: clr
  &:focus:after
    {align}: 0
    {align-alt}: 0
    background-color: transparent
    hasTransition()

//  ABSOLUTE
makeAbsolute(tp=0, al=0, btm=auto, alt=auto)
  position: absolute
  if(tp!=auto)
    top: tp
  if(al!=auto)
    {align}: al
  if(btm!=auto)
    bottom: btm
  if(alt!=auto)
    {align-alt}: alt

//  TRANSITION
step= .03
pattern= 1.16
duration= .5s
durationAlt= duration*3
easing= cubic-bezier(0.190,1.000,0.220,1.000)
hasTransition(dur=duration, dly=0, d=0)
  transition: all (dur+d) easing unit(dly+d, 's')
multiTransition(min, max, dur=duration, dly=0)
  d= 0
  for i in min..max
    d= (d+step)*pattern
    &:nth-child({i})
      hasTransition: dur dly d

